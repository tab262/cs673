<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bucs.virtualmuseumcurator.codescanner.ScannerAcivity"
    android:background="#D1E0FF"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please click and scan the code!"
        android:textSize="20sp"
        android:textColor="#000099"
        
        />

    <Button
        android:id="@+id/scanner"
        android:layout_width="60sp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/greenqr"
        android:gravity="center"
        android:layout_height="60sp" />

    <Button
        android:id="@+id/scanner2"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:layout_below="@+id/scanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/colourfulbarcode"
        android:gravity="center" />

</RelativeLayout>