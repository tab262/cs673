<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bucs.virtualmuseumcurator.information.MuseumInformation" >
   <LinearLayout 
       android:id="@+id/listhours"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
	    <TextView
	        android:id="@+id/hoursInfotext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
       		android:textStyle="bold"
	        android:text="Hours and Information" /> 
	        
	    <TextView android:id="@+id/hoursmon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	     />
	    
	      <TextView android:id="@+id/hourstue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	        <TextView android:id="@+id/hourswed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	          <TextView android:id="@+id/hoursthur"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	            <TextView android:id="@+id/hoursfri"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	          <TextView android:id="@+id/hourssat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	        <TextView android:id="@+id/hourssun"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    
    </LinearLayout>
    
   <TextView 
       android:id="@+id/ticketpricestext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ticket Price:"
       android:textSize="12sp"
       android:textStyle="bold"
       android:layout_below="@+id/listhours"/>
   
   <TextView
       android:id="@+id/ticketprices"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/ticketpricestext"
    />
   
 
    <TextView
       android:id="@+id/visitorinfotext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ticketpricestext"
       android:text="Visitors Info:"
        android:textSize="12sp"
       android:textStyle="bold"
    />
    
     <TextView
       android:id="@+id/visitorinfo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/visitorinfotext"
       
    />
     
     
     <TextView
       android:id="@+id/membershipinfotext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/visitorinfotext"
       android:text="Memebership Info:"
        android:textSize="12sp"
       android:textStyle="bold"
    />
    
   <TextView
       android:id="@+id/membershipinfo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/membershipinfotext"
    />
    
    <TextView
       android:id="@+id/Websitetext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/membershipinfotext"
       android:text="Website :"
        android:textSize="12sp"
       android:textStyle="bold"
    />
    
   <TextView
       android:id="@+id/websiteinfo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/Websitetext"
    />
   
    


</RelativeLayout>
